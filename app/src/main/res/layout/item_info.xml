<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_info">

        <View
            android:id="@+id/itemTag"
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_ff4809_r8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="-3dp"
            android:textColor="#595975"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/itemImg"
            app:layout_constraintStart_toEndOf="@+id/itemTag"
            app:layout_constraintTop_toTopOf="@+id/itemTag"
            tools:text="@string/info_1_q" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemImg"
            android:layout_width="136dp"
            android:layout_height="105dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>